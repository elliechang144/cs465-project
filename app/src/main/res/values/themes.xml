<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IlliniAlertApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/uiuc_orange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.IlliniAlertApp" parent="Base.Theme.IlliniAlertApp" />
    <style name="Theme.IlliniAlertApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.IlliniAlertApp.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.IlliniAlertApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>